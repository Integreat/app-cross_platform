<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
			xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			xmlns:converters="clr-namespace:Integreat.Shared.Converters;assembly=Integreat.Droid"
			x:Class="Integreat.Shared.Pages.PageView"
             HeightRequest="150">
  <ContentView.Resources>
    <ResourceDictionary>
      <converters:UriImageSourceConverter x:Key="ImageConverter" />
    </ResourceDictionary>
  </ContentView.Resources>
  <ContentView.Content>
    <Grid Padding="5,5,5,5">
      <Grid.RowDefinitions>
        <RowDefinition Height="70"></RowDefinition>
        <RowDefinition Height="Auto"></RowDefinition>
      </Grid.RowDefinitions>
      <Grid.Children>
        <Image Source="{Binding Thumbnail, Converter={StaticResource ImageConverter}}"
            HorizontalOptions = "CenterAndExpand"
               MinimumHeightRequest="70"
               HeightRequest="70"
               Grid.Row="0"
            VerticalOptions = "FillAndExpand">
        </Image>

        <ContentView
         HorizontalOptions = "FillAndExpand"
         VerticalOptions = "CenterAndExpand"
         Grid.Row="1">
          <Label Text="{Binding Title}"
                 TextColor="Black"
                 FontSize="18"
                 HorizontalTextAlignment = "Center"
                 VerticalTextAlignment = "Center">
          </Label>
        </ContentView>
      </Grid.Children>
    </Grid>
  </ContentView.Content>
</ContentView>