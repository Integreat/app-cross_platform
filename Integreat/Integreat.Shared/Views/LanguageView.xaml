<?xml version="1.0" encoding="UTF-8" ?>
<ContentView x:Class="Integreat.Shared.Views.LanguageView"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Integreat.Shared.Converters"
             xmlns:customRenderer="clr-namespace:Integreat.Shared.CustomRenderer">
  <ContentView.Resources>
    <ResourceDictionary>
      <converters:UriImageSourceConverter x:Key="ImageConverter" />
    </ResourceDictionary>
  </ContentView.Resources>
  <ContentView.Content>
    <!--use a grid to give the content a fix width, and fill the rest with empty space-->
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="140"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Frame Padding="2" BackgroundColor="{StaticResource backgroundColor}" Grid.Column="1" OutlineColor="#CCCCCC" HasShadow="False" Margin="10">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition Height="40" />
          </Grid.RowDefinitions>
          <Grid.Children>
            <Image Grid.Row="0"
                   Grid.RowSpan="1"
                   HorizontalOptions="FillAndExpand"
                   Margin="-1"
                   Aspect="AspectFill"
                   Source="{Binding IconPath,
                                        Converter={StaticResource ImageConverter}}"
                   VerticalOptions="FillAndExpand" />


              <customRenderer:SpaceFittingLabel FontSize="18" Grid.Row="1"
                     HorizontalTextAlignment="Center" MaximalLineCount="1"
                     Text="{Binding Name}"
                     TextColor="{StaticResource textColor}" HorizontalOptions="CenterAndExpand"
                     VerticalTextAlignment="Center">
                <Label.FontAttributes>Bold</Label.FontAttributes>
              </customRenderer:SpaceFittingLabel>
          </Grid.Children>
        </Grid>
      </Frame>
    </Grid>
  </ContentView.Content>
</ContentView>