<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="Integreat.Shared.IntegreatApp"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ImageSourceConverter x:Key="imageSourceConverter" />
          <!--background color for entire app-->
            <Color x:Key="backgroundColor">#EFEFEF</Color>
          <!--background highlight color e.g. for tiles that lay on top of the background. See LocationsView for example-->
            <Color x:Key="highlightColor">#F9F9F9</Color>
          <!--color for texts.--> 
            <Color x:Key="textColor">#202020</Color>
          <!--color that is used for accents throughout the app-->
            <Color x:Key="accentColor">#F6D500</Color>
            <Color x:Key="navigationDrawerBackground">#CECECE</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>