<?xml version="1.0" encoding="utf-8" ?>
<pages:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Integreat.Shared.Pages.LocationsPage"
             xmlns:controls="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:pages="clr-namespace:Integreat.Shared.Pages;assembly=Integreat.Droid"
             BackgroundColor="#FFC107"
             Title="{Binding Title}" Icon="{Binding Icon}"  IsBusy="{Binding IsBusy}">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="24"/>
      </Style>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ContentPage.Content>
  <StackLayout Orientation="Vertical">
        <Label Text="{Binding Description}" VerticalOptions="Center" HorizontalOptions="Center" Style="{StaticResource LabelStyle}" />
    <Entry x:Name="SearchEntry" Placeholder="Search for" Text="{Binding SearchText}" />
    <controls:FlowListView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" 
			FlowItemsSource="{Binding FoundLocations}" SeparatorVisibility="None" HasUnevenRows="True" FlowLastTappedItem="{Binding SelectedLocation}">

      <controls:FlowListView.FlowColumnsTemplates>
        <controls:FlowColumnSimpleTemplateSelector ViewType="{x:Type pages:LocationView}" />
        <controls:FlowColumnSimpleTemplateSelector ViewType="{x:Type pages:LocationView}"/>
      </controls:FlowListView.FlowColumnsTemplates>
    </controls:FlowListView>

    <ActivityIndicator Color="White" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}"
        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
  </StackLayout>
  </ContentPage.Content>
</pages:BaseContentPage>